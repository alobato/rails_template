<% title 'Login' %>
<% javascript 'jquery-1.4.2.min', 'application' %>
<h1>Fa√ßa login</h1>

<% form_for @user_session, :url => login_path do |f| %>
  <%= f.error_messages %>
  <%= f.label :email, 'Email' %><br />
  <%= f.text_field :email %><br />
  <%= f.label :password, "Senha<span class='tip'>\#{ link_to 'Esqueceu a senha?', recover_password_path }</span>" %><br />
  <%= f.password_field :password %><br />
  <%= f.check_box :remember_me %><%= f.label :remember_me, 'Continuar conectado' %><br />
  <%= f.submit 'Login' %>
<% end %>