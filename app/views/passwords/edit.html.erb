<% title 'Alterar senha' %>
<h1>Alterar senha</h1>

<% form_for @user, :url => change_password_path do |f| -%>
	<%= f.error_messages %>
	<%= label_tag :old_password %><br />
	<%= f.password_field :old_password %><br />
	<%= label_tag :password %><br />
	<%= f.password_field :password %><br />
	<%= label_tag :password_confirmation %><br />
	<%= f.password_field :password_confirmation %><br />
	<%= f.submit 'Alterar' %>
<% end -%>
